html
    width 100%
    height 100%
    padding 0

body
    width 100%
    height 100%
    display flex
    flex-direction column
    justify-content center
    align-items center
    //overflow hidden
    padding 10px
    box-sizing border-box
    margin 0

    h1
        color #2c3e50
        text-shadow 0 0 15px #d7d7d7

#dialog
    width 90%
    height 80%
    max-width 800px
    max-height 1200px
    //box-shadow 0 0 30px -15px dimgrey
    display flex
    flex-direction column
    justify-content stretch
    align-items stretch

    textarea
        border none
        font-size 1.1em
        flex 3 3 auto
        padding 20px
        outline none
        resize none
        font-family sans-serif
        color #2c3e50
    
    #btn-field
        flex 1 1 40px
        display flex
        justify-content center
        gap 10px
        align-items center
        padding 10px 0

        button
            border none
            width 200px
            height 50px
            z-index 1
            border-radius 10px
            transition .3s all
            background-color white
            font-size 1.1em
            font-weight bold
        
        btnColor(prim-color)
            box-shadow 0 0 25px -15px prim-color
            border 2px solid prim-color
            color prim-color

            &:hover
                background-color prim-color
                box-shadow 0 0 55px -10px prim-color
                color white

        button#enc-btn
            btnColor(#2ecc71)
        
        button#dec-btn
            btnColor(#9b59b6)

