DARK_COLOR = #2c3e50

html
    width 100%
    height 100%
    padding 0

body
    width 100%
    height 100%
    display flex
    flex-direction column
    justify-content center
    align-items center
    //overflow hidden
    padding 10px
    box-sizing border-box
    margin 0

    h1
        color DARK_COLOR
        text-shadow 0 0 15px #d7d7d7
        flex 0 0 auto

colorBtn(prim-color)
    box-shadow 0 0 25px -15px prim-color
    border 2px solid prim-color
    color prim-color

    &:hover
        background-color prim-color
        box-shadow 0 0 55px -10px prim-color
        color white

#dialog
    width 90%
    height 80%
    max-width 800px
    max-height 1200px
    //box-shadow 0 0 30px -15px dimgrey
    flex 1 1 auto
    display flex
    flex-direction column
    justify-content stretch
    align-items stretch

    .text-div
        flex 3 3 auto
        position relative

        textarea
            width 100%
            height 100%
            border none
            font-size 1.1em
            padding 20px
            outline none
            resize none
            font-family sans-serif
            color DARK_COLOR
            box-sizing border-box
        
        a
            position absolute
            right 20px
            bottom 20px
            color #3498db
            font-weight bold
            padding 5px 10px
            background #ffffffa0
    
    #btn-field
        flex 1 1 40px
        display flex
        justify-content center
        gap 15px
        align-items center
        padding 10px 0

        button
            border none
            width 200px
            height 50px
            z-index 1

            &#enc-btn
                colorBtn(#2ecc71)
            
            &#dec-btn
                colorBtn(#9b59b6)

button
    border-radius 10px
    transition .3s all
    background-color white
    font-size 1.1em
    font-weight bold

#fast-opr
    position absolute
    bottom 40px
    margin 0 auto
    width 100px
    height 50px

    colorBtn(#3498db)